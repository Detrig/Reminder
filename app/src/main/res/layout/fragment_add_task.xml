<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:background="?attr/colorSurface">

            <TextView
                android:id="@+id/headerOfTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Новая задача"
                android:textSize="20sp"
                android:fontFamily="@font/onest_bold"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_back"/>
        </com.google.android.material.appbar.MaterialToolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/TaskImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:visibility="gone"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddImage"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:text="Добавить изображение"
                android:fontFamily="@font/onest_medium"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRemoveImage"
                android:layout_width="wrap_content"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_height="wrap_content"
                android:text="Удалить изображение"
                android:textColor="@color/black"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- Form fields -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Название задачи"
                android:fontFamily="@font/onest_regular"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Описание"
                android:fontFamily="@font/onest_regular"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNotificationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Текст напоминания"
                android:fontFamily="@font/onest_regular"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Date and Time selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSelectDate"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:text="Выбрать дату"
                android:fontFamily="@font/onest_medium"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSelectTime"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Выбрать время"
                android:fontFamily="@font/onest_medium"/>
        </LinearLayout>

        <!-- Selected date and time -->
        <TextView
            android:id="@+id/tvSelectedDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Дата и время не выбраны"
            android:fontFamily="@font/onest_regular"/>

        <!-- Week days selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Повторять:"
            android:fontFamily="@font/onest_medium"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="false">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipMonday"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Пн"
                    android:fontFamily="@font/onest_regular"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipTuesday"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Вт"
                    android:fontFamily="@font/onest_regular"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipWednesday"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ср"
                    android:fontFamily="@font/onest_regular"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipThursday"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Чт"
                    android:fontFamily="@font/onest_regular"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipFriday"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Пт"
                    android:fontFamily="@font/onest_regular"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSaturday"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сб"
                    android:fontFamily="@font/onest_regular"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSunday"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Вс"
                    android:fontFamily="@font/onest_regular"/>

            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>

        <!-- Save button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Сохранить"
            android:backgroundTint="@color/primary"
            android:fontFamily="@font/onest_bold"/>
    </LinearLayout>
</ScrollView>